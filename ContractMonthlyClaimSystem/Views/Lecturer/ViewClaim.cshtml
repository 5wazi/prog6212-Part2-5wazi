@model ContractMonthlyClaimSystem.Models.Claim

@{
    ViewData["Title"] = "Claim Details";
}

<br />
<div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2">
    <h4 class="fw-bold mb-0">Claim Details</h4>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a asp-controller="Lecturer" asp-action="Dashboard">Lecturer Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-controller="Lecturer" asp-action="Claims">My Claims</a></li>
            <li class="breadcrumb-item active" aria-current="page">Claim #@Model.ClaimID</li>
        </ol>
    </nav>
</div>

<div class="card shadow-sm rounded-3 border-0">
    <div class="card-body">
        <h5 class="card-title mb-3 fw-semibold">Claim Summary</h5>

        <dl class="row mb-0">
            <dt class="col-sm-3">Claim ID</dt>
            <dd class="col-sm-9">#@Model.ClaimID</dd>

            <dt class="col-sm-3">Submission Date</dt>
            <dd class="col-sm-9">@Model.SubmissionDate.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-3">Hours Worked</dt>
            <dd class="col-sm-9">@Model.HoursWorked</dd>

            <dt class="col-sm-3">Hourly Rate</dt>
            <dd class="col-sm-9">R @Model.HourlyRate</dd>

            <dt class="col-sm-3">Total</dt>
            <dd class="col-sm-9 fw-semibold text-success">R @Model.Total</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                @switch (Model.ClaimStatus)
                {
                    case "Pending":
                        <span class="badge bg-warning text-dark">Pending</span>
                        ;
                        break;
                    case "Approved":
                        <span class="badge bg-success">Approved</span>
                        ;
                        break;
                    case "Rejected":
                        <span class="badge bg-danger">Rejected</span>
                        ;
                        break;
                    default:
                        <span class="badge bg-secondary">@Model.ClaimStatus</span>
                        ;
                        break;
                }
            </dd>

            <dt class="col-sm-3">Notes</dt>
            <dd class="col-sm-9">@Model.Notes</dd>
        </dl>

        <hr />

        <h6 class="fw-semibold mb-3">Attached Documents</h6>
        @if (Model.Documents != null && Model.Documents.Count > 0)
        {
            <ul class="list-group list-group-flush">
                @foreach (var doc in Model.Documents)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>@doc.FileName</span>
                        <a href="@Url.Content("~/uploads/" + doc.FileName)" target="_blank" class="btn btn-sm btn-outline-primary">View</a>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">No documents attached.</p>
        }

        <hr />
        <div class="mt-3">
            <a asp-controller="Lecturer" asp-action="Claims" class="btn btn-outline-secondary px-4">Back to My Claims</a>
        </div>
    </div>
</div>
