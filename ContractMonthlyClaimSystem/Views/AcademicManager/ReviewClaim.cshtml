@{
    ViewData["Title"] = "Review Claim";
}

<!-- Top bar -->
<br />
<div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2">
    <h4 class="fw-bold mb-0">Claim #112 – Final Approval</h4>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item">
                <a asp-controller="AcademicManager" asp-action="Dashboard">Manager Dashboard</a>
            </li>
            <li class="breadcrumb-item">
                <a asp-controller="AcademicManager" asp-action="Claims">Claims</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Claim Details</li>
        </ol>
    </nav>
</div>

<!-- Claim Details Card -->
<div class="card bg-light text-dark shadow-sm rounded-3 mb-4">
    <div class="card-body">
        <h5 class="card-title mb-3 fw-semibold">Claim Details</h5>
        <div class="row g-3">
            <div class="col-md-6">
                <p><strong>Lecturer:</strong> M. Dlamini</p>
                <p><strong>Month:</strong> March</p>
                <p><strong>Hours Worked:</strong> 5</p>
                <p><strong>Hourly Rate:</strong> R300</p>
                <p><strong>Total:</strong> R1500</p>
                <p><strong>Status:</strong> <span class="badge bg-warning text-dark">Pending</span></p>
                <p><strong>Submission Date:</strong> 2025-09-01</p>
                <p><strong>Coordinator Status:</strong> <span class="badge bg-success">Verified</span></p>
            </div>
            <div class="col-md-6">
                <h6>Uploaded Documents</h6>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Timesheet.pdf
                        <a href="#" class="btn btn-sm btn-outline-secondary">Download</a>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        SupportingDoc1.pdf
                        <a href="#" class="btn btn-sm btn-outline-secondary">Download</a>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        SupportingDoc2.pdf
                        <a href="#" class="btn btn-sm btn-outline-secondary">Download</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Reviewer Action Card -->
<div class="card bg-light text-dark shadow-sm rounded-3">
    <div class="card-body">
        <h5 class="card-title mb-3 fw-semibold">Final Reviewer Actions</h5>

        <div class="mb-3">
            <label for="reviewComment" class="form-label">Provide Feedback</label>
            <textarea class="form-control" id="reviewComment" rows="4" placeholder="Add comments for rejection or clarification..."></textarea>
        </div>

        <div class="d-flex gap-2 flex-wrap">
            <button class="btn btn-success px-4">Approve Claim</button>
            <button class="btn btn-danger px-4">Reject Claim</button>
            <a asp-controller="AcademicManager" asp-action="Claims" class="btn btn-outline-secondary px-4">Back to Pending Claims</a>
        </div>
    </div>
</div>
