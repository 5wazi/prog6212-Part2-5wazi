@model IEnumerable<ContractMonthlyClaimSystem.Models.Claim>

@{
    ViewData["Title"] = "Pending Final Approval";
}

<div class="container mt-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="text-dark">Pending Final Approval</h4>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item">
                    <a asp-controller="AcademicManager" asp-action="Dashboard">Manager Dashboard</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Claims</li>
            </ol>
        </nav>
    </div>

    <!-- Filters Section -->
    <div class="card mb-4 shadow-sm border-0">
        <div class="card-body">
            <form class="row g-3">
                <div class="col-md-3">
                    <input type="month" class="form-control" placeholder="Filter by Month" />
                </div>
                <div class="col-md-3">
                    <select class="form-select">
                        <option selected>All Lecturers</option>
                        @foreach (var lecturer in Model.Select(c => c.User).Distinct())
                        {
                            <option>@lecturer.FullName</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <select class="form-select">
                        <option selected>All Statuses</option>
                        <option>Verified</option>
                        <option>Approved</option>
                        <option>Rejected</option>
                    </select>
                </div>
                <div class="col-md-3 d-flex gap-2">
                    <button class="btn btn-primary px-3">Apply Filter</button>
                    <button class="btn btn-outline-secondary px-3">Reset</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Claims Table -->
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h5 class="card-title mb-3">Claims Awaiting Final Approval</h5>
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-primary">
                        <tr>
                            <th>Claim ID</th>
                            <th>Lecturer</th>
                            <th>Month</th>
                            <th>Coordinator Status</th>
                            <th>Documents</th>
                            <th>Final Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var claim in Model)
                            {
                                <tr>
                                    <td>#@claim.ClaimID</td>
                                    <td>@claim.User?.FullName</td>
                                    <td>@claim.SubmissionDate.ToString("MMMM")</td>
                                    <td>
                                        <span class="badge bg-success">Verified</span>
                                    </td>
                                    <td>@(claim.Documents?.Count ?? 0) Files</td>
                                    <td>
                                        <a asp-controller="AcademicManager" asp-action="ReviewClaim" asp-route-id="@claim.ClaimID"
                                           class="btn btn-sm btn-outline-primary me-1">View Details</a>

                                        <form asp-action="ReviewClaim" asp-controller="AcademicManager" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@claim.ClaimID" />
                                            <input type="hidden" name="action" value="Approve" />
                                            <input type="hidden" name="comment" value="Approved by Academic Manager" />
                                            <button type="submit" class="btn btn-sm btn-success">Approve</button>
                                        </form>

                                        <form asp-action="ReviewClaim" asp-controller="AcademicManager" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@claim.ClaimID" />
                                            <input type="hidden" name="action" value="Reject" />
                                            <input type="hidden" name="comment" value="Rejected by Academic Manager" />
                                            <button type="submit" class="btn btn-sm btn-danger">Reject</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted py-3">No claims awaiting final approval.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Enable Bootstrap Tooltips -->
<script>
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
    var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl)
    })
</script>
