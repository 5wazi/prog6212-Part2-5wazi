@model IEnumerable<ContractMonthlyClaimSystem.Models.Claim>

@{
    ViewData["Title"] = "Claim Verification";
}

<!-- Top bar -->
<br />
<div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2">
    <h4 class="fw-bold">Claim Verification</h4>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item">
                <a asp-controller="ProgramCoordinator" asp-action="Dashboard">Coordinator Dashboard</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Claims</li>
        </ol>
    </nav>
</div>

<!-- Filter Options -->
<div class="card shadow-sm rounded-3 mb-4 border-0">
    <div class="card-body">
        <h5 class="card-title mb-3 fw-semibold">Filter Claims</h5>
        <div class="row g-3">
            <div class="col-md-3">
                <input type="month" class="form-control" id="filterMonth" placeholder="Filter by Month">
            </div>
            <div class="col-md-3">
                <select class="form-select" id="filterLecturer">
                    <option selected>All Lecturers</option>
                    @foreach (var lecturer in Model.Select(c => c.User).Distinct())
                    {
                        <option>@lecturer.FullName</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <select class="form-select" id="filterStatus">
                    <option selected>All Statuses</option>
                    <option>Submitted</option>
                    <option>Pending</option>
                    <option>Approved</option>
                    <option>Rejected</option>
                </select>
            </div>
            <div class="col-md-3 d-flex gap-2">
                <button class="btn btn-primary px-4">Apply Filter</button>
                <button class="btn btn-outline-secondary px-4">Reset</button>
            </div>
        </div>
    </div>
</div>

<!-- Claims Table -->
<div class="card shadow-sm rounded-3 border-0">
    <div class="card-body">
        <h5 class="card-title mb-3 fw-semibold">Claims Awaiting Verification</h5>
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-primary">
                    <tr>
                        <th>Claim ID</th>
                        <th>Lecturer</th>
                        <th>Month</th>
                        <th>Status</th>
                        <th>Documents</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var claim in Model)
                        {
                            <tr>
                                <td>#@claim.ClaimID</td>
                                <td>@claim.User?.FullName</td>
                                <td>@claim.SubmissionDate.ToString("MMMM")</td>
                                <td>
                                    @switch (claim.ClaimStatus)
                                    {
                                        case "Approved":
                                            <span class="badge bg-success">Approved</span>
                                            ;
                                            break;
                                        case "Rejected":
                                            <span class="badge bg-danger">Rejected</span>
                                            ;
                                            break;
                                        case "Verified":
                                            <span class="badge bg-info text-dark">Verified</span>
                                            ;
                                            break;
                                        default:
                                            <span class="badge bg-warning text-dark">@claim.ClaimStatus</span>
                                            ;
                                            break;
                                    }
                                </td>
                                <td>@(claim.Documents?.Count ?? 0) Files</td>
                                <td>
                                    <a asp-controller="ProgramCoordinator" asp-action="ReviewClaim" asp-route-id="@claim.ClaimID"
                                       class="btn btn-sm btn-outline-primary me-1">View Details</a>

                                    <form asp-action="ReviewClaim" asp-controller="ProgramCoordinator" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@claim.ClaimID" />
                                        <input type="hidden" name="action" value="Verify" />
                                        <button type="submit" class="btn btn-sm btn-success">Verify</button>
                                    </form>

                                    <form asp-action="ReviewClaim" asp-controller="ProgramCoordinator" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@claim.ClaimID" />
                                        <input type="hidden" name="action" value="Reject" />
                                        <input type="hidden" name="reviewerComment" value="Rejected by Coordinator" />
                                        <button type="submit" class="btn btn-sm btn-danger">Reject</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-3">No claims found for verification.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
